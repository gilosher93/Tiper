<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">#283593</item>
    </style>
    <style name="SwitchTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">#FFC107</item>
    </style>
    <style name="ShowcaseView">
        <item name="sv_titleTextAppearance">@style/TextAppearance.ShowcaseView.Title</item>
        <item name="sv_detailTextAppearance">@style/TextAppearance.ShowcaseView.Detail</item>
        <item name="sv_backgroundColor">#ff33B5E5</item>
        <item name="sv_buttonText">@string/next</item>
    </style>

    <style name="CustomShowcaseTheme2" parent="ShowcaseView">
        <item name="sv_backgroundColor">#e51249d9</item>
        <item name="sv_showcaseColor">#25467A</item>
    </style>

</resources>
