<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55007aff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity">
    <RelativeLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <TextView
            android:visibility="invisible"
            android:id="@+id/txtHiddenText"
            android:layout_centerHorizontal="true"
            android:text="לחץ על ״התחל עבודה״ בכדי להתחיל את המשמרת"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:paddingBottom="10dp"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout">
        <RelativeLayout
            android:id="@+id/startWorkingLayout"
            android:background="#00ffffff"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/lblEnterTime"
                android:gravity="center"
                android:text="שעת התחלה 15:55"
                android:textColor="#000"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true" />
            <Button
                android:background="@drawable/start_working_button_shape"
                android:layout_alignParentEnd="true"
                android:text="התחל עבודה"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnStartWorking" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/layoutTipsAndSalary"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:background="#00FFFFFF"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:text="משכורת היום"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/lblDailySalary"
                    android:gravity="center"
                    android:text="0₪"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:text="טיפים היום"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <Button
                        android:id="@+id/btnDecrease"
                        android:text="-"
                        android:textSize="30sp"
                        android:textColor="#000"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/lblDailyTips"
                        android:gravity="center"
                        android:text="0₪"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/btnIncrease"
                        android:text="+"
                        android:textSize="30sp"
                        android:textColor="#000"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutSummary"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:text="סה״כ היום"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/lblDailySummary"
                android:gravity="center"
                android:text="0₪"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTarget"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_target_normal"
            android:layout_width="150dp"
            android:layout_height="150dp">
            <TextView
                android:text="@string/drag_here_tips"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="90dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:contentDescription="shekel20"
        android:id="@+id/btnShekel20"
        android:background="#00ffffff"
        android:src="@drawable/shekel20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_marginEnd="5dp"
        android:contentDescription="shekel10"
        android:id="@+id/btnShekel10"
        android:layout_marginBottom="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="#00ffffff"
        android:src="@drawable/shekel10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:layout_marginEnd="5dp"
        android:contentDescription="shekel2"
        android:id="@+id/btnShekel2"
        android:layout_marginBottom="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="#00ffffff"
        android:src="@drawable/shekel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:layout_marginEnd="5dp"
        android:contentDescription="shekel1"
        android:id="@+id/btnShekel1"
        android:background="#00ffffff"
        android:layout_marginBottom="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/shekel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/btnShekel5"
        android:contentDescription="shekel5"
        android:background="#00ffffff"
        android:layout_marginBottom="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/shekel5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>